{% extends 'base.html.twig' %}

{% block title %}PizzaShop - Inscription{% endblock %}

{% block body %}
    
    <h1>Inscription</h1>
    
        <form method="post">
        
            {{ form_start(form) }}

            <h3>Vos informations personnelles</h3>
            <div class="block">
                <div class="form-group">
                    <div class="form-group-errors">
                        {{ form_errors(form.lastname)}}
                    </div>
                    <div class="form-group-row">
                        {{ form_label(form.lastname)}}
                        {{ form_widget(form.lastname)}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group-errors">
                        {{ form_errors(form.firstname)}}
                    </div>
                    <div class="form-group-row">
                        {{ form_label(form.firstname)}}
                        {{ form_widget(form.firstname)}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group-errors">
                        {{ form_errors(form.email)}}
                    </div>
                    <div class="form-group-row">
                        {{ form_label(form.email)}}
                        {{ form_widget(form.email)}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group-errors">
                        {{ form_errors(form.password)}}
                    </div>
                    <div class="form-group-row">
                        {{ form_label(form.password)}}
                        {{ form_widget(form.password)}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group-errors">
                        {{ form_errors(form.confirmPassword)}}
                    </div>
                    <div class="form-group-row">
                        {{ form_label(form.confirmPassword)}}
                        {{ form_widget(form.confirmPassword)}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group-errors">
                        {{ form_errors(form.phone)}}
                    </div>
                    <div class="form-group-row">
                        {{ form_label(form.phone)}}
                        {{ form_widget(form.phone)}}
                    </div>
                </div>
               
                {# {{ form_row(form.lastname)}}
                {{ form_row(form.firstname)}}
                {{ form_row(form.email)}}
                {{ form_row(form.password)}}
                {{ form_row(form.confirmPassword)}}
                {{ form_row(form.phone)}} #}

            </div>

            <h3>Votre adresse</h3>
            <div class="block">
                <div class="form-group">
                    <div class="form-group-errors">
                            {{ form_errors(form.city)}}
                    </div>
                    <div class="form-group-row">
                            {{ form_label(form.city)}}
                            {{ form_widget(form.city)}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group-errors">
                            {{ form_errors(form.zipCode)}}
                    </div>
                    <div class="form-group-row">
                            {{ form_label(form.zipCode)}}
                            {{ form_widget(form.zipCode)}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group-errors">
                            {{ form_errors(form.streetAddress)}}
                    </div>
                    <div class="form-group-row">
                            {{ form_label(form.streetAddress)}}
                            {{ form_widget(form.streetAddress)}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group-errors">
                            {{ form_errors(form.supplement)}}
                    </div>
                    <div class="form-group-row">
                            {{ form_label(form.supplement)}}
                            {{ form_widget(form.supplement)}}
                    </div>
                </div>

                {# {{ form_row(form.city)}}
                {{ form_row(form.zipCode)}}
                {{ form_row(form.streetAddress)}}
                {{ form_row(form.supplement)}} #}
            </div>

            <div class="btn-container">
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-pencil"></i>
                    <span>S'inscrire</span>
                </button>
            </div>


            {{ form_end(form) }}
        
        </form>

{% endblock %}

