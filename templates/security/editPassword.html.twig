{% extends "base.html.twig" %}

{% block title %}
  PizzaShop - Changer de mot de passe
{% endblock %}

{% block body %}


  <h1>Changer de mot de passe</h1>

    {% for message in app.flashes("error") %}
      {{ message }}
    {% endfor %}

  <form method="post">

    {{ form_start(form)}}
  
    <div class="form-content">
    
      <div class="form-group">
        <div class="form-group-errors">
            {{ form_errors(form.previousPassword)}}
        </div>
        <div class="form-group-row">
            {{ form_label(form.previousPassword)}}
            {{ form_widget(form.previousPassword)}}
        </div>
      </div>
      <div class="form-group">
        <div class="form-group-errors">
            {{ form_errors(form.password)}}
        </div>
        <div class="form-group-row">
            {{ form_label(form.password)}}
            {{ form_widget(form.password)}}
        </div>
      </div>
      <div class="form-group">
          <div class="form-group-errors">
              {{ form_errors(form.confirmPassword)}}
          </div>
          <div class="form-group-row">
              {{ form_label(form.confirmPassword)}}
              {{ form_widget(form.confirmPassword)}}
          </div>
      </div>
      <div class="btn-container">
        <button type="submit" class="btn btn-success">
          <span>Mettre Ã  jour</span>
        </button>
      </div>
    </div>

    {{ form_row(form._token) }}
    {{ form_end(form)}}
  
  </form>

{% endblock %}