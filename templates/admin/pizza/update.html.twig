{% extends "base.html.twig" %}

{% block title %}ADMIN - Modification de la {{ pizza.name }}{% endblock %}

{% block body %}

   {{ form_start(form) }}
    <form method="post">
    <h1>Nouvelle Pizza</h1>
    <div class="btn-container absolute">
        <a class="btn btn-success" href="{{ path("app_admin_pizza_list")}}">
            <i class="fa-solid fa-circle-chevron-left"></i>
            <span>Retour Ã  la liste</span>
        </a>
    </div>
        <div class="form-content">
            <div class="form-group">
                <div class="form-group-errors">
                    {{ form_errors(form.name)}}
                </div>
                <div class="form-group-row">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
            </div>
            <div class="form-group">
                <div class="form-group-errors">
                    {{ form_errors(form.description)}}
                </div>
                <div class="form-group-row">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                </div>
            </div>
            <div class="form-group">
                <div class="form-group-errors">
                    {{ form_errors(form.price)}}
                </div>
                <div class="form-group-row">
                    {{ form_label(form.price) }}
                    {{ form_widget(form.price) }}
                </div>
            </div>
            <div class="form-group">
                <div class="form-group-errors">
                    {{ form_errors(form.imageUrl)}}
                </div>
                <div class="form-group-row">
                    {{ form_label(form.imageUrl) }}
                    {{ form_widget(form.imageUrl) }}
                </div>
            </div>
            <div class="btn-container">
                <button class="btn btn-success" type="submit">
                    <i class="fa-solid fa-circle-plus"></i>
                    <span>Ajouter</span>
                </button>
            </div>

            {{ form_row(form._token) }}
        </div>
    </form>
    {{ form_end(form) }}

{% endblock %}